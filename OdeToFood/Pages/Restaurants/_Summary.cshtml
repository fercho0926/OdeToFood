@using OdeToFood.Core
@model Restaurant

<div class="tab-pane">
   <h3>@Model.Name</h3>
</div>
<div class="panel-body">
    <span Location : @Model.Location></span>
    <span Cuisine : @Model.Cuisine></span>
</div>
<div class="footer">
    <a class="btn btn-lg"
       asp-page="./detail"
       asp-route-restaurantId="@Model.Id">
        <i class="fa fa-eye"></i>
    </a>
    <a class="btn btn-lg"
       asp-page="./Edit"
       asp-route-restaurantId="@Model.Id">
        <i class="fa fa-edit"></i>
    </a>
    <a class="btn btn-lg"
       asp-page="./Delete"
       asp-route-restaurantId="@Model.Id">
        <i class="fa fa-trash"></i>
    </a>
</div>